<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              xmlns:tools="http://schemas.android.com/tools"
              xmlns:ads="http://schemas.android.com/apk/res-auto"

              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/dk_gray"
              tools:context=".MainActivity"
              android:orientation="vertical" >



    <LinearLayout   xmlns:tools="http://schemas.android.com/tools"
                    android:background="@color/dk_gray"
                    tools:context=".MainActivity"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" android:layout_marginTop="0dp" android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp" android:layout_marginBottom="0dp">


        <ImageButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="2"
                android:scaleType="fitXY"

                android:src="@drawable/buttonbuyselector"
                android:onClick="GoToBuy"
                android:padding="0dp" android:layout_marginBottom="0dp" android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp" android:layout_marginRight="5dp" android:cropToPadding="false"
                android:adjustViewBounds="false"/>

        <ImageButton
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_gravity="top"
                android:layout_weight="2"
                android:src="@drawable/buttonsellselector"
                android:onClick="GoToSell" android:padding="0dp" android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp" android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
                android:cropToPadding="false" android:adjustViewBounds="false"/>

        <ImageButton
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:scaleType="fitXY"
                android:layout_weight="2"
                android:src="@drawable/buttoncheckselector"
                android:onClick="GoToCheck"
                android:layout_marginBottom="0dp" android:padding="0dp" android:layout_marginTop="0dp"
                android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:cropToPadding="false"
                android:baselineAlignBottom="false" android:adjustViewBounds="false"/>     #



    </LinearLayout>





    <LinearLayout   xmlns:tools="http://schemas.android.com/tools"

                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dk_gray"
                    tools:context=".MainActivity"
                    android:orientation="horizontal" android:layout_marginTop="0dp">

        <!--<com.facebook.widget.LoginButton
                android:id="@+id/authButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                />-->

        <com.facebook.widget.LoginButton
                android:id="@+id/btn_fb"
                android:layout_weight="1"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="top"


                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"

                android:visibility="visible"

                android:layout_marginRight="3dp"/>

        <!--<ImageButton
                android:id="@+id/btn_fb"
                android:layout_weight="1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="top"


                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:src="@drawable/buttonfbselector"
                android:visibility="visible"

                />-->




        <!--<ImageButton
                android:id="@+id/btn_vk"
                android:layout_weight="1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="top"


                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:padding="0dp"
                android:src="@drawable/buttonvkselector"
                android:visibility="invisible"

                />-->

        <ImageButton
                android:id="@+id/btn_i"
                android:layout_weight="1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="top"


                android:padding="0dp"
                android:src="@drawable/buttoniselector"
                android:onClick="GoToInfo"

                android:layout_marginBottom="1dp" android:layout_marginRight="5dp"/>




    </LinearLayout>

    <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"

            android:id="@+id/adView"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/admob_publisher_id"
            />


</LinearLayout>